{% extends 'base.html.twig' %}

{% block title %}Inscription - Dawn GN{% endblock %}

{% block body %}
<main class="mt-0 transition-all duration-200 ease-soft-in-out">
    <section>
        <div class="relative flex items-start pt-12 pb-56 m-4 overflow-hidden bg-cover min-h-50-screen rounded-xl" style="background-image: url('{{ asset('assets/img/fond_nyan-pony.jpg') }}')">
            <span class="absolute top-0 left-0 w-full h-full bg-center bg-cover bg-gradient-to-tl from-rose-600 to-rose-300 opacity-40"></span>
            <div class="container z-10">
                <div class="flex flex-wrap justify-center -mx-3">
                    <div class="w-full max-w-full px-3 mx-auto mt-0 text-center lg:flex-0 shrink-0 lg:w-6/12">
                        <h1 class="mt-12 mb-2 text-white drop-shadow-[0_3px_3px_rgba(131,24,67,0.7)]">Dawn 38</h1>
                        <p class="text-white drop-shadow-[0_3px_3px_rgba(131,24,67,0.7)]">Créez votre compte pour participer au Dawn 38.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="flex flex-wrap -mx-3 -mt-48 md:-mt-56 lg:-mt-48">
                <div class="w-full max-w-full px-3 mx-auto mt-0 md:flex-0 shrink-0 md:w-7/12 lg:w-5/12 xl:w-4/12">
                    <div class="relative z-0 flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
                        <div class="flex-auto p-6">
                            <form method="post">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        {{ message }}
                                    </div>
                                {% endfor %}

                                <div class="mb-4">
                                    <input type="text" name="name" id="inputName" class="text-sm focus:shadow-soft-primary-outline leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding py-2 px-3 font-normal text-gray-800 transition-all focus:border-fuchsia-300 focus:bg-white focus:text-gray-800 focus:outline-none focus:transition-shadow" placeholder="Votre nom" required autofocus>
                                </div>

                                <div class="mb-4">
                                    <input type="email" name="email" id="inputEmail" class="text-sm focus:shadow-soft-primary-outline leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding py-2 px-3 font-normal text-gray-800 transition-all focus:border-fuchsia-300 focus:bg-white focus:text-gray-800 focus:outline-none focus:transition-shadow" placeholder="vive-les-nomads@nomads.com" required>
                                </div>

                                <div class="mb-4">
                                    <input type="password" name="password" id="inputPassword" class="text-sm focus:shadow-soft-primary-outline leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding py-2 px-3 font-normal text-gray-800 transition-all focus:border-fuchsia-300 focus:bg-white focus:text-gray-800 focus:outline-none focus:transition-shadow" placeholder="Mot de passe" required>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="inline-block w-full px-6 py-3 mt-6 mb-2 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-150 bg-x-25 bg-gradient-to-tl from-gray-900 to-slate-800 hover:border-slate-700 hover:bg-slate-700 hover:text-white">S'inscrire</button>
                                </div>
                                <p class="mt-4 mb-0 leading-normal text-sm text-center">Vous avez déjà un compte ? <br/>C'est par ici : <a href="{{ path('app_login') }}" class="font-bold text-slate-700 hover:underline">Se connecter</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <footer class="py-12">
        <div class="container">
            <div class="flex flex-wrap -mx-3">
                <div class="flex-shrink-0 w-full max-w-full mx-auto mb-6 text-center lg:flex-0 lg:w-8/12">
                    <a href="#" class="mb-2 mr-4 text-slate-400 sm:mb-0 xl:mr-12 cursor-pointer hover:scale-102 hover:text-slate-700 hover:underline">Dawn, l'univers</a>
                    <a href="#" class="mb-2 mr-4 text-slate-400 sm:mb-0 xl:mr-12 cursor-pointer hover:scale-102 hover:text-slate-700 hover:underline">Contactez-nous</a>
                    <a href="#" class="mb-2 mr-4 text-slate-400 sm:mb-0 xl:mr-12 cursor-pointer hover:scale-102 hover:text-slate-700 hover:underline">Mentions légales</a>
                    <a href="#" class="mb-2 mr-4 text-slate-400 sm:mb-0 xl:mr-12 cursor-pointer hover:scale-102 hover:text-slate-700 hover:underline"><span class="text-lg fab fa-facebook"></span></a>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3">
                <div class="w-8/12 max-w-full px-3 mx-auto mt-1 text-center flex-0 text-xs">
                    © <script>document.write(new Date().getFullYear());</script>, made with <i class="fa fa-heart"></i> by Dawn dev team
                </div>
            </div>
        </div>
    </footer>
</main>
{% endblock %} 